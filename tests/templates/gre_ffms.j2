#!/bin/sh
failed=0
echo
{% for host in ffms_tun_to%}
ip=192.168.{{hostvars[host.host_name].domaenen_id*10 + server_id}}.{{hostvars[host.host_name].server_id*4+2}} 
ping -c1 $ip >/dev/null 2>&1 && echo Tunnel ok: {{host.host_name}}/$ip ||{ echo Tunnel failed: {{host.host_name}}/$ip && failed=1;}
ip=2a03:2260:115:ffa0:{{hostvars[host.host_name].domaenen_id}}:{{server_id}}:{{hostvars[host.host_name].server_id}}:2
ping6 -c1 $ip >/dev/null 2>&1 && echo Tunnel ok: {{host.host_name}}/$ip ||{ echo Tunnel failed: {{host.host_name}}/$ip && failed=1;}
{% endfor %}
exit $failed
