server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name {{inventory_hostname_short}}.{{freifunk.domain}};

    location /.well-known/acme-challenge {
        root /var/www/letsencrypt;
        try_files $uri $uri/ =404;
    }

    location / {
        return 301 https://$server_name$request_uri;
    }
}
