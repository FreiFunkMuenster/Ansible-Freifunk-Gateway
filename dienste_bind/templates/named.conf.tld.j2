{% for domain in domains %}
zone "{{domain}}." IN {
	type master;
	file "/etc/bind/db.{{domain}}";
	allow-transfer {
	   localhost;
{% for host in groups['gateways'] %}
	   {{hostvars[host].ipv4 }};
{% endfor %}
	};
};
